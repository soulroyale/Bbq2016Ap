<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jalee.bbqbuddy.SmartTimer_TimeLine_Builder"
    tools:showIn="@layout/activity_smart_timer__time_line__builder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Meat"
        android:id="@+id/txtSelMeat"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMeats"
        android:layout_below="@+id/txtSelMeat"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cooked:"
        android:id="@+id/txtCooked"
        android:layout_below="@+id/spinnerThick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thickness/Weight"
        android:id="@+id/txtThickness"
        android:layout_below="@+id/spinnerMeats"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerThick"
        android:layout_below="@+id/txtThickness"
        android:layout_alignStart="@+id/txtCooked" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/txtCooked"
        android:layout_alignParentStart="true"
        android:fillViewport="false"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioCookType">

            <RadioButton
                android:id="@+id/radioRare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rare"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioMRare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Rare"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioMWell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Well"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioWell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Well Done"
                android:checked="false" />



        </RadioGroup>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        android:layout_alignBottom="@+id/scrollView3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp" />

</RelativeLayout>
