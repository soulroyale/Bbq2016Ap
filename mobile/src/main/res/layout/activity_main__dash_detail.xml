<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jalee.bbqbuddy.Main_DashDetail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/bannerImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cookingicon_new"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:text=""
        android:id="@+id/transBGTop"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#6e000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prep Time:"
        android:id="@+id/txtPrepTimelbl"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:layout_alignStart="@+id/transBGTop"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NA"
        android:id="@+id/txtPrepTime"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtPrepTimelbl"
        android:paddingLeft="5dp"
        android:layout_alignStart="@+id/transBGTop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cook Time:"
        android:id="@+id/txtCookTimelbl"
        android:layout_below="@+id/txtPrepTime"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:layout_alignStart="@+id/transBGTop"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NA"
        android:id="@+id/txtCookTime"
        android:layout_below="@+id/txtCookTimelbl"
        android:layout_alignStart="@+id/transBGTop"
        android:paddingLeft="5dp"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dashDetailScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"

        android:scrollIndicators="none"
        android:layout_below="@+id/bannerImage"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Content Sample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample ContentSample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content Sample Content "
                android:id="@+id/txtContent"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adView"
        ads:adSize="BANNER"
        ads:adUnitId="@string/dash_detail_banner_ad_unit_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
