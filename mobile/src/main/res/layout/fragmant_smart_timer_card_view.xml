<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="0dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/cardtitle"
            android:text="Title"
            android:textSize="22sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/carddesc"
            android:layout_alignEnd="@+id/carddesc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/carddesc"
            android:text="Roast Meat"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/cardtitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/cardmins"
            android:layout_toStartOf="@+id/cardmins" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardmins"
            android:text="120"
            android:textSize="44sp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/cardimage"
            android:textColor="#757575" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="mins"
            android:id="@+id/mins"
            android:paddingRight="0dp"
            android:textSize="10sp"
            android:layout_alignBaseline="@+id/cardmins"
            android:layout_alignBottom="@+id/cardmins"
            android:layout_alignEnd="@+id/cardimage" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/cardimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/ic_menu_delete" />
    </RelativeLayout>

</android.support.v7.widget.CardView>