<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:ads="http://schemas.android.com/tools"
        android:id="@+id/cv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Event"
            android:id="@+id/txtCurrentEvent"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_above="@+id/txtSmartTimerNext"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/txtSmartTimerNext"
            android:textSize="90sp"
            android:layout_above="@+id/txtTotalRem"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="30dp"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Up Next:"
            android:id="@+id/txtUpNext"
            android:textAlignment="center"
            android:paddingTop="135dp"
            android:paddingBottom="10dp"
            android:layout_alignBottom="@+id/txtSmartTimer"
            android:textStyle="italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next Event"
            android:id="@+id/txtUntilNext"
            android:textAlignment="center"
            android:paddingTop="155dp"
            android:paddingBottom="10dp"
            android:layout_alignBottom="@+id/txtSmartTimer"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:ads="http://schemas.android.com/tools"
        android:id="@+id/cv2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/cv"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/txtSmartTimer"
            android:textSize="90sp"
            android:layout_below="@+id/txtTotalRem"
            android:layout_alignStart="@+id/txtSmartTimerNext"
            android:layout_centerVertical="true"
            android:paddingTop="30dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Time Remaining"
            android:id="@+id/txtTotalRem"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textAlignment="center" />

    </android.support.v7.widget.CardView>

</RelativeLayout>



