<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/cardimage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/cardtitle"
            android:layout_toRightOf="@+id/cardimage"
            android:layout_alignParentTop="true"
            android:text="Sample Title Sample Title Sample Title Sample Title"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/carddesc"
            android:layout_toRightOf="@+id/cardimage"
            android:layout_below="@+id/cardtitle"
            android:layout_marginTop="8dp"
            android:text="Sample Description, Sample Description, Sample Description, Sample Description, Sample Description, Sample Description, Sample Description, Sample Description, Sample Description, "
            android:textSize="12dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/btnLike"
            android:layout_below="@+id/carddesc"
            android:layout_alignParentLeft="true"
            android:background="#00ffffff"
            android:paddingTop="10dp"
            android:clickable="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite"
            android:id="@+id/btnFavourite"
            android:layout_below="@+id/carddesc"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"
            android:paddingTop="10dp"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/btnShare"
            android:layout_below="@id/carddesc"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:paddingTop="10dp"
            android:clickable="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>