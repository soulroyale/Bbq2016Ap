<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jalee.bbqbuddy.SmartTimer_Changelog"
    tools:showIn="@layout/activity_smart_timer__changelog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Version: 0.5.65"
        android:id="@+id/txtVersion"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change Log:"
        android:id="@+id/txtChange"
        android:layout_below="@+id/txtVersion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/scrollView5"
        android:layout_below="@+id/txtChange"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 0.5.65 \n - Add Drag and Drop to sort timeline Events \n - Miscelaneous Layout Improvements \n\nVersion 0.5.63 \n - Fix Autopause notification not being cleared automatically \n - Updating timer Card UI \n - Added internal Changelog \n\nVersion 0.5.61 \n - Implementation of Ripple animations for Lollipop+ (SDK 21) and a Block Highlight for Lower Android version  \n\nVersion 0.5.60 \n - Fix Timeline text height getting cut-off \n - Fix over increase/decrease in timeline mins \n - Fix Misc Bugs \n - Add Extend minutes into notification  \n\nVersion 0.5.57 \n - New Simpler User Interface \n - Numerous service fixes and tweaks \n - Actionable Android Wear Notification \n - Bug Fixes"
            android:id="@+id/textView" />
    </ScrollView>
</RelativeLayout>
